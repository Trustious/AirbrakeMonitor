!!! 5
%html{:lang => "en"}
  %head
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :charset => "utf-8" }
    %title= @title || 'Airbrake Monitoring'
    %link{ :rel => "stylesheet", :href => "http://yui.yahooapis.com/combo?pure/0.2.0/base-min.css&pure/0.2.0/grids-min.css&pure/0.2.0/forms-min.css&pure/0.2.0/buttons-min.css&pure/0.2.0/menus-min.css&pure/0.2.0/tables-min.css" }
    %link{ :rel => "stylesheet", :href => "/stylesheets/application.css" }
  %body
    .container
      .nav
        .pure-menu.pure-menu-open.pure-menu-horizontal
          %ul
            %li
              %a{ :href => "/" } Home
            %li
              %a{ :href => "/hot" } Hot Errors
            %li
              %a{ :href => "/keywords" } Keywords
      .search
        %form#search-form.pure-form{ :action => "/search", :method => "get", :enctype => "multipart/form-data" }
          - if @project
            %input#project_id{ :type => "hidden", :name => "project_id", :value => @project.id }
          %input#search_text{ :type => "text", :name => "search_text", :value => @search_text, :style => "width: 80%;"}
          %button.pure-button.pure-button-primary{ :type => "submit" } Search
      .main
        = yield
