%h1 #{@title} in #{@project.name}
%table.pure-table{:style => "width: 100%"}
  %thead
    %tr
      %td Error Message
      %td Count
      %td ID
      %td Last Happened At
  %tbody
    - @errors.each do |error|
      %tr
        %td= error[0].error_message
        %td= error[0].notices_count
        %td <a href="https://#{$config['auth']['account']}.airbrake.io/projects/#{@project.id}/groups/#{error[0].id}">#{error[0].id}</a>
        %td= error[0].most_recent_notice_at
